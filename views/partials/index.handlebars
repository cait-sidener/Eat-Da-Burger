<div class="container">
  <img src="https://ih1.redbubble.net/image.384728473.0260/flat,550x550,075,f.u5.jpg" alt="Burger Pic">
  <h1>Eat-Da-Burger!</h1>

  <div class="row">
    <div class="col-md-7 col-left">
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-5 col-right">
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/if}}
      {{/each}}
    </div>

  </div>


  <form class="create-form">

    <div class="form-group">
      <label for="name"></label>
      <textarea id="burger" name="burger_name" rows="2" cols="40" placeholder="Enter a burger you want to eat. Click the 'Submit' button."></textarea>
    </div>
    <button type="submit" id="submit">Submit</button>
    </form>

</div>
