<h1>Eat-Da-Burger!</h1>

<div class="burgerz">
<ul class="eatit">
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>


<ul class="ateit">
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>
</div>

<div class="addit">
<form class="create-form">

  <div class="form-group">
    <input type="text" id="burger" name="burger_name">
  </div>

  <button type="submit">Submit</button>
</form>
</div>

<p>Enter a buger you want to eat. Click the "Submit" button.</p>

